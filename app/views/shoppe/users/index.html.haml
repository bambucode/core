- @page_title = "Usuarios"

= content_for :header do
  %p.buttons=link_to "Nuevo Usuario", :new_user, :class => 'button green'
  %h2.users Usuarios

.table
  %table.data
    %thead
      %tr
        %th Nombre
        %th Correo
    %tbody
      - for user in @users
        %tr
          %td= link_to user.full_name, [:edit, user]
          %td= user.email_address
