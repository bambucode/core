= form_for @user do |f|
  = f.error_messages
  = field_set_tag "Detalles de Usuario" do
    .splitContainer
      %dl.half
        %dt= f.label :first_name, "Nombre"
        %dd= f.text_field :first_name, :class => 'focus text'
      %dl.half
        %dt= f.label :last_name, "Apellido"
        %dd= f.text_field :last_name, :class => 'text'
  = field_set_tag "Inicio de Sesión" do
    .splitContainer
      %dl.third
        %dt= f.label :email_address, "Correo"
        %dd= f.text_field :email_address, :class => 'text'
      %dl.third
        %dt= f.label :password, "Contraseña"
        %dd= f.password_field :password, :class => 'text'
      %dl.third
        %dt= f.label :password_confirmation, "...de nuevo, por favor."
        %dd= f.password_field :password_confirmation, :class => 'text'


  %p.submit
    - unless @user.new_record?
      %span.right= link_to "Eliminar", @user, :class => 'button purple', :method => :delete, :data => {:confirm => "¿Está seguro?"}
    = f.submit "Guardar", :class => 'button green'
    = link_to "Cancelar", :users, :class => 'button'
