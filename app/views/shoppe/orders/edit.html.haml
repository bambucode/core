- @page_title = 'Editar Orden #' + @order.number

= content_for :header do
  %p.buttons
    = link_to "Regresar", @order, :class => 'button grey'
  %h2.orders Editar OrdenÂ <b>##{@order.number}</b>

= form_for @order, :html => {:class => 'orderForm'} do |f|
  = f.error_messages
  = render 'form', :f => f
  
  = field_set_tag "Notas" do
    %dl
      %dd= f.text_area :notes, :class => 'text'

  = field_set_tag "Productos Ordenados", :class => 'padded' do
    = render 'order_items_form', :f => f

  %p.submit
    = f.submit "Guardar Orden", :class => 'button green'
    = link_to "Cancelar", @order, :class => 'button'